# GodDamnEye Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=GodDamnEye
DEBUG=false

# Database
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./data/goddamneye.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/goddamneye

# Storage
STORAGE_PATH=./storage
HLS_PATH=/tmp/goddamneye/hls

# Recording settings
RECORDING_SEGMENT_DURATION=3600
RECORDING_RETENTION_DAYS=30

# Recording encoding settings (H.265/HEVC via libx265)
# CRF (Constant Rate Factor): 0-51, lower = better quality, higher = smaller files
# 23 = good quality, 28 = good balance (default), 32 = smaller files
RECORDING_CRF=28
# Encoding speed preset - tradeoff between encode time and file size:
# - "fast": Quick encoding, larger files. Use if CPU is limited.
# - "balanced": Good default. Moderate encode time, good compression.
# - "compact": Slow encoding, smallest files. Maximum storage savings.
RECORDING_QUALITY=balanced
# Scale down recordings to save space (e.g., "1280:720" for 720p, leave empty to keep original)
RECORDING_SCALE=

# FFmpeg
FFMPEG_PATH=ffmpeg

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Future: SSO OAuth settings
# OAUTH_ENABLED=false
# OAUTH_ISSUER_URL=https://your-idm.example.com
# OAUTH_CLIENT_ID=goddamneye
# OAUTH_CLIENT_SECRET=your-secret
